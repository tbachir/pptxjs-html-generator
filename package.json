{
  "name": "pptxjs-html-generator",
  "version": "1.1.0",
  "description": "Modern TypeScript port of pptxjs for generating HTML from PowerPoint slides with video support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build 2>/dev/null || echo 'Build skipped - using pre-built files'"
  },
  "keywords": [
    "powerpoint",
    "pptx",
    "html",
    "typescript",
    "slide",
    "presentation",
    "video"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/tbachir/pptxjs-html-generator#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbachir/pptxjs-html-generator.git"
  },
  "bugs": {
    "url": "https://github.com/tbachir/pptxjs-html-generator/issues"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}